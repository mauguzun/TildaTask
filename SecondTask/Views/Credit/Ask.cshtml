@model SecondTask.Models.BankUser


<h4>Bank Transaction</h4>
<hr />
<div class="row">
        <form asp-action="Ask">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>@Model.Email  max credit size  @Model.Amount </label>

                <div class="alert-danger">
                    @Html.ValidationMessage("error")

                </div>

                <input type="number" name="Amount" min="1" max="@Model.Amount" class="form-control" />
                <br />
                <input type="submit" value="Create" class="btn btn-primary" />

            </div>
        </form>
 
</div>



